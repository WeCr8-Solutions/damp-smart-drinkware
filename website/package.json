{
  "name": "damp-smart-drinkware-website",
  "version": "1.0.0",
  "description": "Professional smart drinkware website with BLE technology and performance optimization",
  "main": "index.html",
  "private": true,
  "scripts": {
    "dev": "npx http-server . -p 3000 -c-1",
    "dev:debug": "npm run dev & npm run lint:watch",
    "serve": "npm run dev",
    "serve:test": "npx http-server . -p 3001 -c-1 --silent",
    "serve:prod": "npx http-server dist -p 3002 -c-1 --silent",
    "serve:e2e": "npx http-server dist -p 3003 -c-1 --silent",
    "serve:ci": "npx http-server dist -p 3000 -c-1 --silent",
    "build": "npm run validate:all && npm run build:prod",
    "build:dev": "npm run optimize:images:quick && node ../build/build.js --dev",
    "build:prod": "npm run optimize:images && node build-optimize.js && npm run minify:all",
    "build:analyze": "npm run build:prod && npm run bundle:analyze",
    "build:optimize": "node build-optimize.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config=../tests/config/jest.config.js --testPathPattern=unit --coverage --passWithNoTests",
    "test:integration": "jest --config=../tests/config/jest.config.js --testPathPattern=integration --coverage --passWithNoTests",
    "test:e2e": "playwright test --config=../tests/config/playwright.config.js",
    "test:e2e:chromium": "playwright test --config=../tests/config/playwright.config.js --project=chromium",
    "test:e2e:firefox": "playwright test --config=../tests/config/playwright.config.js --project=firefox",
    "test:e2e:webkit": "playwright test --config=../tests/config/playwright.config.js --project=webkit",
    "test:e2e:headed": "playwright test --config=../tests/config/playwright.config.js --headed",
    "test:visual": "playwright test --config=../tests/config/playwright.config.js --grep=\"visual regression\"",
    "test:a11y": "axe --include=\"main,nav,footer\" --exclude=\"#ads\" --dir=. --save=a11y-report.json",
    "test:watch": "jest --config=../tests/config/jest.config.js --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --config=../tests/config/jest.config.js --runInBand",
    "lighthouse": "lighthouse https://dampdrink.com --output=json --output-path=lighthouse-report.json",
    "lighthouse:local": "lighthouse http://localhost:3000 --output=json --output-path=lighthouse-report-local.json",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:ci:collect": "lhci collect",
    "lighthouse:ci:assert": "lhci assert",
    "lighthouse:ci:upload": "lhci upload",
    "performance:audit": "npm run build:prod && npm run lighthouse:local",
    "performance:monitor": "npm run lighthouse:ci",
    "performance:budget": "npm run lighthouse:ci:assert",
    "optimize:images": "node ../build/optimize-images.js",
    "optimize:images:quick": "node ../build/optimize-images.js --quick",
    "optimize:css": "node ../build/optimize-css.js",
    "optimize:js": "node ../build/optimize-js.js",
    "minify:css": "cssnano assets/css/**/*.css --dir dist/assets/css",
    "minify:js": "terser assets/js/**/*.js --compress --mangle --output-dir dist/assets/js",
    "minify:all": "npm run minify:css && npm run minify:js",
    "lint": "eslint assets/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js --fix",
    "lint:watch": "nodemon --exec \"npm run lint\" --watch assets/js --ext js",
    "validate:html": "html-validate *.html pages/*.html",
    "validate:css": "stylelint assets/css/**/*.css",
    "validate:js": "eslint assets/js/**/*.js",
    "validate:all": "npm run validate:html && npm run validate:css && npm run validate:js",
    "bundle:analyze": "webpack-bundle-analyzer dist/assets/js --port 8888",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deploy:preview": "npm run build:prod && npx netlify deploy --dir=dist",
    "deploy:prod": "npm run build:prod && npx netlify deploy --prod --dir=dist",
    "clean": "rm -rf dist node_modules/.cache .lighthouseci",
    "clean:reports": "rm -rf lighthouse-report*.json .lighthouseci coverage",
    "start": "npm run serve",
    "prestart": "npm run build:optimize"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "axe-core": "^4.8.3",
    "cssnano": "^6.0.3",
    "eslint": "^8.56.0",
    "html-validate": "^8.7.4",
    "jest": "^29.7.0",
    "lighthouse": "^11.7.1",
    "nodemon": "^3.0.2",
    "playwright": "^1.40.1",
    "postcss": "^8.4.32",
    "stylelint": "^16.1.0",
    "terser": "^5.26.0",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "dependencies": {
    "firebase": "^10.7.1",
    "stripe": "^14.12.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "lighthouse": {
    "extends": "lighthouse:default",
    "settings": {
      "onlyAudits": [
        "first-contentful-paint",
        "largest-contentful-paint",
        "speed-index",
        "cumulative-layout-shift",
        "total-blocking-time"
      ]
    }
  }
}
