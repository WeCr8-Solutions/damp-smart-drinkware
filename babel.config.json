                "browsers": [
                    "last 2 versions",
                    "> 1%",
                    "not dead"
                ]
            },
            "modules": "commonjs"
        }]
    ],
    "env": {
        "test": {
            "plugins": [
                "@babel/plugin-transform-modules-commonjs"
            ]
        }
    }
}