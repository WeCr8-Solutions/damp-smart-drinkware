# Feature flags - set to true when Firebase keys are configured
EXPO_PUBLIC_FIREBASE_ENABLED=true
EXPO_PUBLIC_STRIPE_ENABLED=false
EXPO_PUBLIC_BLE_ENABLED=false
EXPO_PUBLIC_ANALYTICS_ENABLED=false

# Firebase Configuration (PRIMARY DATABASE - Owner: zach@wecr8.info)
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=G-ABCDEF1234

# Stripe Configuration (for Firebase Functions)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# App Configuration
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_PLATFORM=web
EXPO_PUBLIC_ADMIN_EMAIL=zach@wecr8.info
EXPO_PUBLIC_API_URL=https://your-region-your-project.cloudfunctions.net
EXPO_PUBLIC_ENVIRONMENT=development

# Deep Link Configuration
EXPO_PUBLIC_DEEP_LINK_SCHEME=damp
EXPO_PUBLIC_DEEP_LINK_HOST=app.dampdrink.com