{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "esnext",
      "es2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "react-native-ble-plx": [
        "types/react-native-ble-plx-override.d.ts"
      ],
      "react-native-ble-plx/*": [
        "types/react-native-ble-plx-override.d.ts"
      ],
      "@/*": [
        "./*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/contexts/*": [
        "./contexts/*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ],
      "@/styles/*": [
        "./styles/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/firebase/*": [
        "./firebase/*"
      ],
      "@/supabase/*": [
        "./supabase/*"
      ],
      "@/src/*": [
        "./src/*"
      ],
      "@/tests/*": [
        "./tests/*"
      ],
      "@/mocks/*": [
        "./tests/setup/mocks/*"
      ],
      "@/test-utils/*": [
        "./tests/setup/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@contexts/*": [
        "./contexts/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@types/*": [
        "./types/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@firebase/*": [
        "./firebase/*"
      ],
      "@supabase/*": [
        "./supabase/*"
      ],
      "@tests/*": [
        "./tests/*"
      ],
      "@/config": [
        "./firebase/config.ts"
      ],
      "@/auth": [
        "./firebase/auth.ts",
        "./contexts/AuthContext.tsx"
      ],
      "@/database": [
        "./firebase/database.ts",
        "./types/supabase.ts",
        "./lib/supabase.ts"
      ],
      "@/lib/supabase": [
        "./lib/supabase.ts"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "types",
      "./types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "app/**/*",
    "components/**/*",
    "contexts/**/*",
    "hooks/**/*",
    "lib/**/*",
    "utils/**/*",
    "styles/**/*",
    "src/**/*",
    "types/**/*",
    "firebase/**/*",
    "tests/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "metro.config.js",
    "*.config.js",
    "*.config.ts",
    "jest.config.js",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules",
    ".expo",
    "build",
    "dist",
    "lib",
    "android",
    "ios",
    ".vscode",
    ".bolt",
    "coverage",
    "*.tsbuildinfo",
    "**/*.generated.ts",
    "**/*.backup",
    "**/*.bak",
    ".env*"
  ],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "node"
    }
  },
  "extends": "expo/tsconfig.base"
}
