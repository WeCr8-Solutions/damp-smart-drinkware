# NPM configuration for DAMP Smart Drinkware
# This ensures consistent dependency resolution across environments

# Use legacy peer dependency resolution to avoid conflicts
legacy-peer-deps=true

# Use exact versions (no ^= or ~= ranges)
save-exact=false

# Increase timeout for slower connections
fetch-timeout=60000

# Always use package-lock.json
package-lock=true

# Disable automatic updates
update-notifier=false

# Use production mode when deploying
production=false

# Engine strict - enforce Node/NPM versions
engine-strict=false

