{
  "name": "damp-smart-drinkware",
  "version": "1.0.0",
  "description": "DAMP Smart Drinkware - Secure Development Environment",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathIgnorePatterns=\"tests/e2e\"",
    "test:unit": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathIgnorePatterns=\"tests/e2e\"",
    "test:e2e": "cd website && npx playwright test",
    "test:all": "node run-tests.js",
    "test:single": "node run-tests.js",
    "install-security": "npm install --save-dev @commitlint/cli @commitlint/config-conventional husky lint-staged detect-secrets gitleaks",
    "setup-hooks": "husky install && npm run setup-pre-commit",
    "setup-pre-commit": "npx husky add .husky/pre-commit 'npx lint-staged'",
    "scan-secrets": "gitleaks detect --verbose",
    "scan-secrets-staged": "gitleaks protect --staged --verbose",
    "env:secure": "node scripts/secure-environment.js",
    "env:secure:preview": "node scripts/secure-environment.js --dry-run",
    "env:generate-keys": "node scripts/generate-secure-keys.js",
    "env:generate-keys:dev": "node scripts/generate-secure-keys.js development",
    "env:generate-keys:staging": "node scripts/generate-secure-keys.js staging",
    "env:generate-keys:prod": "node scripts/generate-secure-keys.js production",
    "env:validate": "node scripts/validate-environment.js",
    "env:validate:dev": "node scripts/validate-environment.js development",
    "env:validate:staging": "node scripts/validate-environment.js staging",
    "env:validate:prod": "node scripts/validate-environment.js production --strict",
    "env:setup": "npm run env:secure && npm run env:generate-keys:dev",
    "env:help": "echo 'üîê Environment Management Commands:' && echo '  env:secure - Secure existing .env files' && echo '  env:generate-keys - Generate secure random keys' && echo '  env:validate - Validate environment setup' && echo '  env:setup - Complete environment setup (secure + generate)'",
    "validate-env": "node scripts/validate-environment.js",
    "security-check": "npm run scan-secrets && npm run validate-env",
    "security:full": "npm run env:secure:preview && npm run scan-secrets && npm run env:validate"
  },
  "lint-staged": {
    "*": [
      "gitleaks protect --staged --verbose",
      "node scripts/validate-secrets.js"
    ],
    "*.{js,ts,tsx,jsx,html}": [
      "node scripts/check-hardcoded-secrets.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@jest/globals": "^30.2.0",
    "@netlify/plugin-lighthouse": "^6.0.3",
    "@playwright/test": "^1.55.1",
    "@stripe/stripe-js": "^8.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "babel-jest": "^30.2.0",
    "cross-env": "^10.1.0",
    "firebase": "^12.3.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^15.2.0",
    "postcss-html": "^1.8.0",
    "puppeteer": "^24.23.0",
    "rimraf": "^6.0.1",
    "serve-handler": "^6.1.6",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@expo/webpack-config": "^18.0.1",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@types/react": "~18.2.14",
    "expo": "^49.0.23",
    "expo-dev-client": "~2.4.13",
    "expo-router": "^2.0.0",
    "express": "^5.1.0",
    "firebase-admin": "^13.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-native": "^0.72.6",
    "react-native-web": "^0.19.6",
    "stripe": "^19.1.0",
    "typescript": "^5.1.3"
  }
}
